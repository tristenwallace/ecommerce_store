{
  "compilerOptions": {
    "target": "es2018", // Set target ES version
    "module": "commonjs", // Use commonjs module system, suitable for Node.js
    "lib": ["es2018"], // Include type definitions for es2018
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interop between commonjs and esModules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"], // Include all files in src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}